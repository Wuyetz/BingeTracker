<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BingeTracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    body {
        background: #c3d5d5 !important;   
    }
</style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>

            <div class="navbar-collapse collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("MyMovies", "Index", "MyMovies", null, new { @class = "nav-link" })</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BingeTracker</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

        $(document).on("click", ".noteButton", function () {
            
            $(this).next().show();
            $(this).hide();
        });

        $(document).on("click", ".noteSubmit", function () {

            $(this).parent().hide();
            $(this).find(".noteButton").show();
        });

        $(document).on("click", ".ratingButton", function () {

            $(this).next().show();
            $(this).hide();
        });

        $(document).on("click", ".ratingSubmit", function () {

            $(this).parent().hide();
            $(this).find(".ratingButton").show();
        });



        $(document).on("click", ".rateClass", function () {

            if ($(this).closest('tr').find(".rateDiv").is(":visible"))
            {
                $(this).closest('tr').find(".rateDiv").hide();
            }
            else
            {
                $(this).closest('tr').find(".rateDiv").show();    
            }
            
        });

        $(document).on("click", ".noteClass", function () {

            if ($(this).closest('tr').find(".noteDiv").is(":visible")) {
                $(this).closest('tr').find(".noteDiv").hide();
            }
            else {
                $(this).closest('tr').find(".noteDiv").show();
            }

        });
   

    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

